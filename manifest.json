{
  "manifest_version": 2,
  "name": "Spotify Liker",
  "version": "1.0",
  "description": "Automatically like songs on Spotify",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Like Songs",
    "default_popup": "popup.html"
  }
}
